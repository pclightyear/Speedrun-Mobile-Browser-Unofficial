<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/search_item_cover_image"
        android:layout_width="@dimen/search_list_item_cover_image_width"
        android:layout_height="@dimen/search_list_item_cover_image_height" />

    <TextView
        android:id="@+id/search_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/search_item_cover_image"
        android:paddingStart="@dimen/search_list_item_name_padding_start"
        android:paddingEnd="0dp"
        android:textSize="@dimen/search_list_item_name_text_size"
        android:textColor="@color/white" />

</RelativeLayout>